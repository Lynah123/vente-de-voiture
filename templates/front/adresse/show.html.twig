{% extends 'base.html.twig' %}

{% block title %}Adresse{% endblock %}

{% block body %}
<section class="adresse-show">
    <div class="container">

        <h1>Adresse</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Identification</th>
                    <td>{{ adresse.id }}</td>
                </tr>
                <tr>
                    <th>NOm</th>
                    <td>{{ adresse.name }}</td>
                </tr>
                <tr>
                    <th>Société</th>
                    <td>{{ adresse.company }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ adresse.adress }}</td>
                </tr>
                <tr>
                    <th>COde Postal</th>
                    <td>{{ adresse.postal }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ adresse.city }}</td>
                </tr>
                <tr>
                    <th>Pays</th>
                    <td>{{ adresse.country }}</td>
                </tr>
                <tr>
                    <th>Numéro Téléphone</th>
                    <td>{{ adresse.phone }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_adresse_edit', {'id': adresse.id}) }}" class="btn btn-primary px-4 btn-register">Modifier</a>
    
        <a href="{{ path('app_adresse_index') }}" class="btn btn-secondary">Retour à la liste</a>
    
    
        {{ include('front/adresse/_delete_form.html.twig') }}
    </div>
</section>
{% endblock %}
