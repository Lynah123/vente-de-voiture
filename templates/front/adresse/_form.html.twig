{{ form_start(form) }}
    <div class="row">
        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12">
            <div class="form-group mb-3">
                <label for="" class="mb-2">Nom</label>
                {{form_widget(form.name)}}
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12">
            <div class="form-group mb-3">
                <label for="" class="mb-2">Société</label>
                {{form_widget(form.company)}}
            </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12">
            <div class="form-group mb-3">
                <label for="" class="mb-2">Numéro Téléphone</label>
                {{form_widget(form.phone)}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
            <div class="form-group mb-3">
                <label for="" class="mb-2">Adresse exact</label>
                {{form_widget(form.adress)}}
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
            <div class="form-group mb-3">
                <label for="" class="mb-2">Code Postal</label>
                {{form_widget(form.postal)}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
            <div class="form-group mb-3">
                <label for="" class="mb-2">Ville</label>
                {{form_widget(form.city)}}
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
            <div class="form-group mb-3">
                <label for="" class="mb-2">Pays</label>
                {{form_widget(form.country)}}
            </div>
        </div>
    </div>
    <button class="btn btn-primary px-4 btn-register">{{ button_label|default('Enregistrer') }}</button>
    <a href="{{ path('app_adresse_index') }}" class="btn btn-primary px-4">Retour à la liste</a>

{{ form_end(form) }}
