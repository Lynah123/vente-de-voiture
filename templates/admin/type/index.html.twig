{% extends 'admin/base.html.twig' %}

{% block title %}Liste Type{% endblock %}

{% block body %}
<section class="type">
    <div class="container">
    {% for message in app.flashes('success') %}
          <div class="alert alert-success">
              {{message}}
          </div>
      {% endfor %}
        <h1 class="mb-4">Liste de Types</h1>
        <a href="{{ path('app_type_new') }}" class="btn btn-primary px-4 mb-4">Nouveau Type</a>
        <div class="table-type">
            <table class="table table-striped" id="type-table" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Identification</th>
                        <th>Types</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for type in types %}
                    <tr>
                        <td>{{ type.id }}</td>
                        <td>{{ type.title }}</td>
                        <td>
                            <a class="btn btn-secondary" href="{{ path('app_type_show', {'id': type.id}) }}">Voir</a>
                            <a class="btn btn-secondary" href="{{ path('app_type_edit', {'id': type.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucune enregistrement trouv√©</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>

{% endblock %}
