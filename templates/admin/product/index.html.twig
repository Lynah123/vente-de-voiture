{% extends 'admin/base.html.twig' %}

{% block title %}Liste produit{% endblock %}

{% block body %}
<section class="product-index">
    <div class="container">
        <h1 class="mb-4">Lste des produits</h1>
        <a href="{{ path('app_product_new') }}" class="btn btn-primary px-4 mb-5">Nouveau Produit</a>
        <table class="table table-striped" id="table-product" style="width: 100%;">
            <thead>
                <tr class="text-nowrap ">
                    <th class="text-center">Id</th>
                    <th class="text-center">Titre</th>
                    <th class="text-center">Date de création</th>
                    <th class="text-center">actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}

                <tr class="text-nowrap text-center">
                        <td>{{ product.id }}</td>
                        <td>{{ product.title }}</td>
                        <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-secondary">Voir</a>
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-secondary">Modifier</a>
                            <a href="{{ path('app_product_details', {'id': product.id}) }}" class="btn btn-warning">Détails</a>
                        </td>
                    {% else %}
                    <tr>
                        <td colspan="4">Aucun enregistrement trouvé</td>
                    </tr>
                    {% endfor %}
                </tr>
            </tbody>
        </table>
    </div>
</section>
   
{% endblock %}
