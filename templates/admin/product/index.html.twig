{% extends 'admin/base.html.twig' %}

{% block title %}Liste Produit{% endblock %}

{% block body %}
    <section class="product" id="product">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{message}}
                </div>
            {% endfor %}
            <h1 class="mb-4">Liste de Produits</h1>
            <a href="{{ path('app_product_new') }}" class="btn btn-primary mb-4 px-4">Nouveau Produit</a>
        
            <div class="product-table">
                <table class="table table-striped" id="table-product">
                    <thead>
                        <tr class="text-center">
                            <th>Identitfication</th>
                            <th>Titre</th>
                            <th>Marques</th>
                            <th>Types</th>
                            <th>Genres</th>
                            <th>Quantité(s)</th>
                            <th>Prix</th>
                            <th>Description</th>
                            <th>Est-il activé?</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr class="text-nowrap">
                            <td>{{ product.id }}</td>
                            <td>{{ product.title }}</td>
                            <td>{{ product.brand.title }}</td>
                            <td>{{ product.type.title }}</td>
                            <td>{{ product.category.title }}</td>
                            <td>{{ product.quantity }}</td>
                            <td>{{ product.price }} €</td>
                            <td>{{ product.description|slice(0,30) }} ...</td>
                            <td>
                                <a href="{{path('update_is_active', {'id' : product.id})}}">
                                    {% if product.isActive == 1 %}
                                        <i class="fas fa-check-circle text-success fs-5"></i>
                                    {% else %}
                                        <i class="fas fa-times-circle text-danger fs-5"></i>
                                    {% endif %}
                                    </a>
                            </td>
                            <td>
                                <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-secondary">Voir</a>
                                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-secondary">Modifier</a>
                                <a href="{{ path('app_stock_index', {'id': product.id}) }}" class="btn btn-warning">Stock</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            
        </div>
    </section>
    

{% endblock %}
