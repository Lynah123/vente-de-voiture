{% extends 'admin/base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <section class="product" id="product">
        <div class="container">
            <h1 class="mb-4">Liste de Produits</h1>
            <a href="{{ path('app_product_new') }}" class="btn btn-primary mb-4 px-4">Nouveau Produit</a>
        
            <div class="product-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Identitfication</th>
                            <th>Titre</th>
                            <th>Description</th>
                            <th>Quantité(s)</th>
                            <th>Types</th>
                            <th>Prix</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.title }}</td>
                            <td>{{ product.description }}</td>
                            <td>{{ product.quantity }}</td>
                            <td>{{ product.type }}</td>
                            <td>{{ product.price }}</td>
                            <td>
                                <a href="{{ path('app_product_show', {'id': product.id}) }}">Voir</a>
                                <a href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            
        </div>
    </section>
    

{% endblock %}
