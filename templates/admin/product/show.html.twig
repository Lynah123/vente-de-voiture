{% extends 'admin/base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<section class="product-show">
    <div class="container">
        <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary px-4 btn-register">Modifier</a>

    <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Retour à la liste</a>

    {{ include('admin/product/_delete_form.html.twig') }}
    </div>
</section>
    
{% endblock %}
