{% block _brand_types_widget %}

    <p>Ici vous pouvez ajoutez les types de marque de la voiture</p>

    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group">
        <button  class="btn btn-primary mt-3 mb-4 btn-collection px-4" id="add-type" type="button"> Ajouter Type </button>
    </div>
    
{% endblock %}

{% block _brand_types_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _brand_types_entry_widget %}
    <div class="form-group mt-3" id="block_{{id}}">
        <div class="row">
           
            <div class="col-lg-10">
                {{ form_widget(form) }}
            </div>
            <div class="col-lg-2">
                <button class="btn btn-danger" type="button" data-action="delete-type" data-target="#block_{{id}}">X</button>
            </div>
        </div>
    </div>
        
{% endblock %}



{% block _brand_categories_widget %}

    <p>Ici, vous pouvez ajouter les genres de la marque de la voiture</p>

    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter-socialLink" value="0">

    <div class="form-group">
        <button  class="btn btn-primary mt-3 mb-4 btn-collection px-4" id="add-category" type="button">Ajouter Category</button>
    </div>
    
{% endblock %}

{% block _brand_categories_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _brand_categories_entry_widget %}
    <div class="form-group mt-3" id="block_{{id}}">
        <div class="row">
            <div class="col-lg-10">
                {{ form_widget(form) }}
            </div>
            <div class="col-lg-1">
                <button class="btn btn-danger" type="button" data-action="delete-category" data-target="#block_{{id}}">X</button>
            </div>
        </div>
    </div>
        
{% endblock %}





